<div class="container form">
  <h1>Edit figurine</h1>
  <%= simple_form_for @figurine do |f| %>
    <%= f.input :name %>
    <%= f.input :year %>
    <%= f.input :brand %>
  <%= f.input :media_universe,  
            :as => :grouped_select, 
            collection: [["DC", [["Batman"], ["Superman"]]],
                         ["Marvel", [["Deadpool"],  ["Wolverine"], ["X Men"]]],
                         ["Sci-Fi", [["Alien"],  ["Predator"]]],
                         ["Star Wars", [["Star Wars Episode"], ["Star Wars Story"], ["The Mandalorian"]]]],
            :group_method => :last, 
            label: "Media Universe"%>
    <%= f.input :media_year %>
    <%= f.input :description %>
    <%= f.input :photo, as: :file %>
    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>
</div>
