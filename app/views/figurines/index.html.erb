<div class="text-center">
  <h1>Figurines list</h1>
  <hr>
  <div class="container text-center">
    <div class="search">
      <%= simple_form_for :figurines_filter, url: figurines_path(anchor:"fig-list"), method: :get do |f| %>
        <%= f.input :search, label: false, value: params.dig(:figurines_filter, :search) %>
        <%= f.submit "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="cards container" id="fig-list">
    <% @figurines.each do |figurine| %>
      <ul>
        <div class="card-category container box-shadow">
          <div class="image">
            <div>
              <% if figurine.photo.attached? %>
                <%= cl_image_tag(figurine.photo.key) %>
              <% else %>
                <%= image_tag("logo.png") %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-text"><%= link_to figurine.name, figurine_path(figurine) %> - <%= figurine.year %></p>
              <div class="align-items-center">
                <div class="text-center">
                  <button type="button" class="btn btn-sm btn-outline-secondary">⭐</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">👍</button>
                </div>
              </div>
            </div>
          </ul>
        <% end %>
      </div>
      <div class="cards container">
        <btn class="btn btn-return"></i><%= link_to "return", root_path %></btn>
    </div>
