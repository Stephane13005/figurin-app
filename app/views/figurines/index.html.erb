<div class="text-center">
  <br>
  <h1>Figurines list</h1>
  <br>
  <div class="container text-center">
    <div class="search container text-center">
      <%= form_tag figurines_path(anchor:"fig-list"), method: :get do %>
        <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Find a figurine"
  %>
        <%= submit_tag "Search", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
  <div class="cards container" id="fig-list">
    <% @figurines.each do |figurine| %>
      <ul>
        <div class="card-category container box-shadow">
          <div class="image">
            <div>
              <% if figurine.photo.attached? %>
                <%= cl_image_tag(figurine.photo.key) %>
              <% else %>
                <%= image_tag("logo.png") %>
              <% end %>
            </div>
            <div class="card-body">
              <p class="card-text"><%= link_to figurine.name, figurine_path(figurine) %></p>
              <p class="card-text"><%= figurine.year %> - <%= humanized_money_with_symbol(figurine.price) %></p>
              <div class="align-items-center">
                <div class="text-center" id="star">
                  <%= link_to "⭐",   favorite_figurine_path(figurine), class: "btn btn-sm btn-outline-secondary", method: :put, data: {confirm: "Awesome! This figurine has been added to your favourites !"}%>
                  <%= link_to "👍", figurines_path(anchor:"star"), class: "btn btn-sm btn-outline-secondary", data: {confirm: "Wow! You like this figurine very much !"}%>
                </div>
              </div>
            </div>
          </ul>
        <% end %>
      </div>
      <div class="container text-center fig">
        <button type="button" class="btn btn-primary coll"><%= link_to "Return", root_path %></button>
      </div>
    </div>
