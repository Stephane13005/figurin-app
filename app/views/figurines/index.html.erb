<div class="text-center">
  <h1>Figurines list</h1>
  <hr>
  <div class="button">
    <button type="submit" class="btn btn-primary btn-lg">Search</button>
    <button type="submit" class="btn btn-primary btn-lg">Filter</button>
  </div>
  <div class="cards container">
    <% @figurines.each do |figurine| %>
      <ul>
        <div class="card-category container" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))">
          <div class="card box-shadow">
            <% if figurine.photo.attached? %>
              <%= cl_image_tag(figurine.photo.key, :width => 100) %>
            <% else %>
              <%= image_tag("logo.png", size: "100x100") %>
            <% end %>
            <div class="card-body">
              <p class="card-text"><%= link_to figurine.name, figurine_path(figurine) %> - <%= figurine.year %></p>
              <div class="align-items-center">
                <div class="text-center">
                  <button type="button" class="btn btn-sm btn-outline-secondary">â­</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">ğŸ‘</button>
                </div>
              </div>
            </div>
          </ul>
        <% end %>
      </div>
      <div class="cards container">
        <btn class="btn btn-return"></i><%= link_to "return", root_path %></btn>
    </div>
