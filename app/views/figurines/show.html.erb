<div class="container card-trip text-center">
  <h1 class="text-center"><%= @figurine.name %></h1>
  <% if @figurine.photo.attached? %>
    <%= cl_image_tag(@figurine.photo.key) %>
  <% else %>
    <%= image_tag("logo.png") %>
  <% end %>
  <div class="card-trip-infos">
    <div class="container">
      <p>Year : <%= @figurine.year %></p>
      <p>Brand : <%= @figurine.brand %></p>
      <p>Seller : <%= @figurine.user.profile.username %></p>
      <hr>
      <h3>Description :</h3>
      <p><%= @figurine.description %>.</p>
    </div>
  </div>
  <hr>
  <div class="text-center">
    <button type="button" class="btn btn-primary btn-sm"><%= link_to 'üîô', figurines_path%></button>
    <button type="button" class="btn btn-primary btn-sm">üëç</button>
    <button type="button" class="btn btn-primary btn-sm"><%= link_to 'üí¨', figurine_path(anchor:"postreview")%></button>
    <button type="button" class="btn btn-primary btn-sm">‚≠ê</button>
  </div>
</div>
<div class="container text-center fig">
  <button type="button" class="btn btn-primary coll"><%= link_to "Collector", profile_path(@figurine.user) %></button>
  <button type="button" class="btn btn-primary media"><%= link_to "Media", media_figurine_path(@figurine) %></button>
</div>
<br>
<br>
<div class="container text-center fig">
  <button type="button" class="btn btn-primary comm">Comments</button>
 <% if @figurine.reviews.blank? %>
      <p>Be the first to leave a review for <%= @figurine.name %> figurine !</p>
    <% else %>
      <% @figurine.reviews.each do |review| %>
<div  id="postreview" class="container card-trip">
  <h4><%= review.user.profile.username %></h4>
  <p><%= review.created_at %> </p>
  <div class="card-trip-infos">
    <p><%= review.content %> </p>
  </div>
  <% end %>
   <% end %>
</div>
 <% if policy(@review).create? %>
<%= simple_form_for([ @figurine, @review ]) do |f| %>
  <%= f.input :content %>
  <%= f.submit "Submit your comment", class: "btn btn-primary" %>
<% end %>
<% end %>
</div>
