<div class="container text-center social-icons">
  <a href="https://www.facebook.com/figurinapp"><i class="fab fa-facebook-square fa-5x"></i></a>
  <a href="#"><i class="fab fa-instagram-square fa-5x"></i></a>
  <a href="https://twitter.com/FigurinApp"><i class="fab fa-twitter-square fa-5x"></i></a>
</div>
<h2 id="month" class="text-center">Figurine of the month</h2>
<div class="container card-trip card-category text-center">
  <% @popular.each do |like| %>
    <div>
      <div class="image">
        <% if like.figurine.photo.attached? %>
          <%= cl_image_tag(like.figurine.photo.key) %>
        <% else %>
          <%= image_tag("logo.png") %>
        <% end %>
      </div>
      <div class="text-center card-body">
        <h1 class="card-text"><%= link_to like.figurine.name, figurine_path(like.figurine) %></h1>
        <h1 class="card-text">Likes : <%= like.figurine.likes.count %></h1>
      <% end %>
    </div>
    <br>
  </div>
</div>
<h2 class="text-center" id= "apropos">About us</h2>
