<div class="text-center">
  <br>
  <h1>Collectors list</h1>
  <br>
  <%= form_tag figurines_path(anchor:"fig-list"), method: :get, class: "search" do %>
    <%= text_field_tag :query, params[:query], class: "form", placeholder: "Find a figurine" %> <%= submit_tag "Search...", class: "btn btn-primary" %>
  <% end %>
  <div class="cards container" id="fig-list">
    <% @profiles.each do |profile| %>
      <ul>
        <div class="card-category container box-shadow">
          <div class="image">
            <div>
              <% if profile.photo.attached?%>
                <p> <%= cl_image_tag profile.photo.key, :width => 200, :height =>300 %></p>
              <% else %>
                <%= image_tag("logo.png", size: "200x300") %>
              <% end %>
            </div>
            <h2><%= link_to profile.username, profile_path(profile) %></h2>
          </div>
        </div>
      </ul>
    <% end %>
  </div>
  <div class="container text-center">
    <button type="button" class="btn btn-return"><%= link_to "Return", :back %></button>
  </div>
</div>
