<div class="container">

<h1> Welcome <%= @profile.username  %> !</h1>
<% if @profile.photo.attached? %>
<p> <%= cl_image_tag @profile.photo.key, :width => 400, :crop => "fill" %></p>
<% end %>
<p><%= @profile.firstname %> <%= @profile.lastname %></p>
<p>Date of birth : <%= @profile.birthdate %></p>
<p>City : <%= @profile.city %></p>

<%= link_to "Add a figurine", new_figurine_path %>

	<div class="cards">
    	<% @figurines.each do |figurine| %>

		<ul>
		  <div class="container">

          <div class="row">
            <div class="">
              <div class="card  box-shadow">
              	<%= cl_image_tag(figurine.photo.key, :width => 100) %>
                <div class="card-body">
                  <p class="card-text"><%= link_to figurine.name, figurine_path(figurine) %> - <%= figurine.year %></p>
                  <div class="align-items-center">
                    <div class="text-center">
                      <button type="button" class="btn btn-sm btn-outline-secondary">‚≠ê</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">üëç</button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
			</div>			
		</ul>
		<% end %>
			</div>


<h1 id="edit">Edit your informations</h1>

<%= simple_form_for @profile, method: :patch do |f| %>
    <%= f.input :firstname %>
    <%= f.input :lastname %>
    <%= f.input :username %>
    <%= f.date_field :birthdate %>
    <%= f.input :city %>
    <%= f.input :photo, as: :file %>
    <div class="form-actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>